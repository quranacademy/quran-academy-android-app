<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openNextSurahButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clickable_light_transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/open_next_surah"
        android:textAllCaps="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        app:fontPath="@string/font_roboto_light"
        tools:text="Следующая сура" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/windowBackgroundSecondary"
        android:duplicateParentState="true" />

</FrameLayout>