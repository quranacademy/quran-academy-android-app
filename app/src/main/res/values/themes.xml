<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="QuranAcademyThemeLight">
        <item name="android:windowBackground">@color/accent</item>
    </style>

    <style name="QuranAcademyThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColorLink">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/hqa_text_grey_200</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:windowBackground">?windowBackground</item>
        <item name="windowBackground">@color/window_background_light</item>
        <item name="windowBackgroundSecondary">@color/window_background_secondary_light</item>
        <item name="bgClickable">@drawable/bg_clickable_light_transparent</item>
        <item name="rippleCircle">@drawable/ripple_circle_light</item>

        <item name="prefHeaderTextColor">@color/accent</item>
        <item name="iconsColor">@color/black</item>

        <!--   Search     -->

        <item name="searchTextHighlightColor">#e74c3c</item>

        <!-- Mushaf -->

        <item name="basmalahImage">@drawable/bismillah_black</item>
        <item name="mushafPageBackgroundColor">?android:attr/windowBackground</item>
        <item name="mushafPageTextColor">?android:attr/textColorPrimary</item>
        <item name="mushafSelectionHighlightColor">#404694A6</item>
        <item name="mushafBookmarkHighlightColor">#40A4A4A4</item>
        <item name="mushafAudioHighlightColor">#404694A6</item>

        <!-- Player -->

        <item name="optionsValueBg">@drawable/options_value_bg_light</item>
        <item name="playerOptionsCircleButtonBg">@drawable/player_options_circle_button_bg_light</item>
        <item name="playerProgressBg">@drawable/player_progressbar_bg_light</item>
        <item name="playerProgressThumbBg">@drawable/player_progressbar_thumb_light</item>
        <item name="ayahAudioHighlightColor">#404694A6</item>

        <!--Material Drawer-->

        <item name="material_drawer_background">@color/white</item>
        <item name="material_drawer_primary_text">@color/hqa_dark_grey_100</item>
        <item name="material_drawer_primary_icon">#717572</item>
        <item name="material_drawer_divider">@color/grey_alpha_50</item>
    </style>

