<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmarkItem"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="?attr/bgClickable"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/bookmarkIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:tint="?attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bookmark_black_24dp"
        tools:text="1" />

    <TextView
        android:id="@+id/bookmarkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bookmarkIcon"
        app:layout_constraintStart_toEndOf="@+id/bookmarkIcon"
        app:layout_constraintTop_toTopOf="@+id/bookmarkIcon"
        tools:text="Аль-Фатиха 1:1" />


</androidx.constraintlayout.widget.ConstraintLayout>